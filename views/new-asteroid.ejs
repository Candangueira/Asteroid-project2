<%- include ('./partials/header') %>

<div style="font-size: x-large; display:flex; justify-content: center; align-items: center; margin: 5em; border: 5px"
    class="justify-content-center">
    <section id="show-page">


<h1 style="color:rgb(0, 102, 255)"><b> Add new asteroid </b></h1>

<form style="margin-top: 1em;" id="new-asteroid" action="/asteroids" method="POST">


    <div class="form-row">
    <div class="col-md-4 mb-3">
   
   
    <!-- NAME -->
    
    
        <div class="input-group mb-3">
            <div style="display: inline-flex; width: 1000px;" class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Name:</span>
                <input style="display: flex; justify-content: center; margin-left: 38;" type="text" name="name" class="form-control" id="basic-url" aria-describedby="basic-addon3" required>
            </div>
        </div>
  


    <!-- MAGNITUDE -->

        
    
        <div class="input-group mb-3">
            <div style="display: inline-flex;" class="input-group-prepend">
                <span  class="input-group-text" id="basic-addon3">Absolute Magnitude:</span>
                <input style="display: flex; justify-content: center; margin-left: 38;" type="number" step="0.01" name="magnitude" class="form-control" id="basic-url" aria-describedby="basic-addon3" required>
            </div>
        </div>
    
    

    <!-- DIAMETER -->
    
    <div>
    
        <div class="input-group mb-3">
            <div style="display: inline-flex;" class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Diameter:</span>
                <input style="display: flex; justify-content: center; margin-left: 38;" type="number" step="0.01"
                    name="diameter" class="form-control" id="basic-url" aria-describedby="basic-addon3" required>
            </div>
        </div>
    </div>
    
    <!-- HAZARDOUS -->
    
    <div>
    
        <div class="input-group mb-3">
            <div style="display: inline-flex;" class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Is potentially hazardous?</span>
                <select class="form-select" aria-label="Default select example" name="hazardous" required>
                   
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
        </div>
    </div>

    <!-- DATE -->
    
    <div>
    
        <div class="input-group mb-3">
            <div style="display: inline-flex;" class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Date of approach:</span>
                <input style="display: flex; justify-content: center; margin-left: 38;" type="date" step="0.01"
                    name="date" class="form-control" id="basic-url" aria-describedby="basic-addon3" required>
            </div>
        </div>
    </div>
   

    <input class="btn btn-outline-primary active" type="submit" value="Add Asteroid" required>
</form>

</div>
<%- include ('./partials/footer') %>
