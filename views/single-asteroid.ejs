<%- include ('./partials/header') %>

<div style="font-size: x-large; display:flex; justify-content: center; align-items: center; margin: 5em;"
    class="justify-content-center">
<section id="show-page">

    <h3 style="font-size: xx-large;">Name: <button style="font-size: xx-large;" type="button" class="btn btn-primary-outline"><%= asteroid.name %></button></h3>
    <p>Magnitude: <div class="p-2 bg-light border"><%= asteroid.magnitude %></div></p>
    <p>Diameter: <div class="p-2 bg-light border"><%= asteroid.diameter %></div></p>
    <p>Is Hazardous?: <div class="p-2 bg-light border"><%= asteroid.hazardous %></div></p>
    <p>Day it will be closest to the Earth: <div class="p-2 bg-light border"><%= asteroid.date.getUTCMonth() + 1 +"/"+asteroid.date.getUTCDate()+"/"+asteroid.date.getUTCFullYear(); %></div></p>

    <!-- Show the images of the asteroids -->

    <%asteroid.pictures.forEach((picture)=> { %>
    
    <img src="<%= picture.link %>">
    <p><%= picture.description %></p>

    <!-- Deletes the picture and description of a specific asteroid -->
    
    <form action="/asteroids/<%=asteroid._id%>/<%=picture._id%>/delete-img?_method=DELETE" method="POST">
        <button type="submit" class="btn-close" aria-label="Close"></button>
    </form>
    
    <% }); %>

</div>

    <div style="display: flex; justify-content: center;">
        <!-- EDIT ASTEROID -->
        <a style="color: aliceblue; margin-right: 0.5em;" href="/asteroids/<%=asteroid._id%>/edit"><button type="button"
                class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-pen-fill" viewBox="0 0 16 16">
                    <path
                        d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001" />
                </svg></button></a>
    
    
        <!-- DELETE ASTEROID -->
        <a style="margin-left: 0.5em;" href="/asteroids/<%=asteroid._id%>/delete"><button type="button"
                class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-trash-fill" viewBox="0 0 16 16">
                    <path
                        d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                </svg></button></a>
    </div>


    <!-- Adds the picture and description of a specific asteroid -->
   
    <div style="display:flex; justify-content: center;" class="col-7">
    
    <form id="add-img-description" method="POST" action="/asteroids/<%=asteroid._id%>">
        
            <input type="url" name="link" class="form-control" id="floatingInputDisabled" placeholder="paste the image url here" disabled>
           
    <br>
        <div class="form-floating">
            <textarea name="description" class="form-control" placeholder="Description" id="floatingTextarea2"
                style="height: 100px"></textarea>
            <label for="floatingTextarea2">Description</label>
            <!-- <textarea name="description"></textarea> -->

            <button style="font-size: large; margin-top: 1em;" type="submit" name="add-url-description" class="btn btn-primary btn-lg">submit</button>
            
            </div>
    <br> 
    </form>

   
    </div>
</section>


<%- include ('./partials/footer') %>